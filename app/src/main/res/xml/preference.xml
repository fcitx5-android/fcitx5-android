<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/behavior"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_ignore_system_cursor"
            android:title="@string/ignore_sys_cursor"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_hide_key_config"
            android:title="@string/hide_key_config"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false" />
        <PreferenceCategory
            android:title="@string/keyboard"
            app:iconSpaceReserved="false">
            <SwitchPreference
                android:defaultValue="true"
                android:key="@string/pref_button_haptic_feedback"
                android:title="@string/button_haptic_feedback"
                app:iconSpaceReserved="false"
                app:singleLineTitle="false" />
            <ListPreference
                android:defaultValue="Grid"
                android:entries="@array/expandable_candidate_style"
                android:entryValues="@array/expandable_candidate_style_values"
                android:key="@string/pref_expanded_candidate_style"
                android:summary="%s"
                android:title="@string/expanded_candidate_style"
                app:iconSpaceReserved="false"
                app:singleLineTitle="false"
                app:useSimpleSummaryProvider="true" />

            <org.fcitx.fcitx5.android.ui.common.DialogSeekBarPreference
                android:defaultValue="6"
                android:key="@string/pref_expanded_candidate_grid_span_count_portrait"
                android:title="@string/expanded_candidate_grid_span_count_portrait"
                app:iconSpaceReserved="false"
                app:max="10"
                app:min="4"
                app:singleLineTitle="false"
                app:useSimpleSummaryProvider="true" />
            <org.fcitx.fcitx5.android.ui.common.DialogSeekBarPreference
                android:defaultValue="8"
                android:key="@string/pref_expanded_candidate_grid_span_count_landscape"
                android:title="@string/expanded_candidate_grid_span_count_landscape"
                app:iconSpaceReserved="false"
                app:max="12"
                app:min="6"
                app:singleLineTitle="false"
                app:useSimpleSummaryProvider="true" />
            <org.fcitx.fcitx5.android.ui.common.DialogSeekBarPreference
                android:defaultValue="30"
                android:key="@string/pref_keyboard_height_percent"
                android:title="@string/keyboard_height"
                app:iconSpaceReserved="false"
                app:max="70"
                app:min="30"
                app:singleLineTitle="false"
                app:unit="%"
                app:useSimpleSummaryProvider="true" />
            <org.fcitx.fcitx5.android.ui.common.DialogSeekBarPreference
                android:defaultValue="49"
                android:key="@string/pref_keyboard_height_percent_landscape"
                android:title="@string/keyboard_height_landscape"
                app:iconSpaceReserved="false"
                app:max="70"
                app:min="30"
                app:singleLineTitle="false"
                app:unit="%"
                app:useSimpleSummaryProvider="true" />
            <org.fcitx.fcitx5.android.ui.common.DialogSeekBarPreference
                android:defaultValue="30"
                android:key="@string/pref_clipboard_item_timeout"
                android:title="@string/clipboard_item_timeout"
                app:iconSpaceReserved="false"
                app:max="300"
                app:min="30"
                app:singleLineTitle="false"
                app:unit="s"
                app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="@string/clipboard"
            app:iconSpaceReserved="false">
            <SwitchPreference
                android:defaultValue="true"
                android:key="@string/pref_clipboard_enable"
                android:title="@string/clipboard_listening"
                app:iconSpaceReserved="false"
                app:singleLineTitle="false" />
            <org.fcitx.fcitx5.android.ui.common.DialogSeekBarPreference
                android:defaultValue="5"
                android:key="@string/pref_clipboard_limit"
                android:title="@string/clipboard_limit"
                app:iconSpaceReserved="false"
                app:max="50"
                app:min="1"
                app:singleLineTitle="false"
                app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>
    </PreferenceCategory>
</PreferenceScreen>