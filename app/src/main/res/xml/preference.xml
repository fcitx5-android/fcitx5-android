<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/behavior"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_ignore_system_cursor"
            android:title="@string/ignore_sys_cursor"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_hide_key_config"
            android:title="@string/hide_key_config"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_button_haptic_feedback"
            android:title="@string/button_haptic_feedback"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_clipboard_enable"
            android:title="@string/clipboard_enable"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false" />
        <me.rocka.fcitx5test.ui.common.DialogSeekBarPreference
            android:defaultValue="5"
            android:key="@string/pref_clipboard_limit"
            android:title="@string/clipboard_limit"
            app:iconSpaceReserved="false"
            app:max="50"
            app:min="1"
            app:singleLineTitle="false"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            android:defaultValue="Grid"
            android:entries="@array/expandable_candidate_style"
            android:entryValues="@array/expandable_candidate_style"
            android:key="@string/pref_expandable_candidate_style"
            android:summary="%s"
            android:title="@string/expandable_candidate_style"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false"
            app:useSimpleSummaryProvider="true" />
        <me.rocka.fcitx5test.ui.common.DialogSeekBarPreference
            android:defaultValue="30"
            android:key="@string/pref_input_window_height_percent"
            android:title="@string/input_window_height"
            app:iconSpaceReserved="false"
            app:max="70"
            app:min="30"
            app:singleLineTitle="false"
            app:unit="%"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>