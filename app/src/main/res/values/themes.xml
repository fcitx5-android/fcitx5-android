<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FcitxAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorLogFatal">@color/red_A700</item>
        <item name="colorLogError">@color/red_400</item>
        <item name="colorLogWarning">@color/yellow_800</item>
        <item name="colorLogInfo">@color/blue_500</item>
        <item name="colorLogDebug">@color/grey_700</item>
        <item name="colorLogVerbose">@color/grey_700</item>
    </style>

    <style name="Theme.CropActivityTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.InputViewTheme" parent="@android:style/Theme.DeviceDefault.Settings" />

    <style name="Theme.DialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog" />

